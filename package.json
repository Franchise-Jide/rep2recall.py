{
  "name": "rep2recall-sqlite",
  "version": "0.4.0",
  "main": "dist/electron.min.js",
  "author": "Pacharapol Withayasakpunt",
  "description": "Rep2Recall with Python SQLite",
  "license": "MIT",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.9.0",
    "@types/codemirror": "^0.0.74",
    "@types/hyperscript": "^0.0.3",
    "@types/jest": "^24.0.15",
    "@types/jquery": "^3.3.29",
    "@types/parsimmon": "^1.10.0",
    "@types/showdown": "^1.9.3",
    "@types/socket.io-client": "^1.4.32",
    "@types/toastr": "^2.1.37",
    "@types/turndown": "^5.0.0",
    "@types/wait-on": "^3.2.0",
    "bootstrap": "^4.3.1",
    "bootstrap-vue": "^2.0.0-rc.22",
    "codemirror": "^5.47.0",
    "concurrently": "^4.1.0",
    "css-loader": "^2.1.1",
    "dotenv": "^8.0.0",
    "electron": "^5.0.2",
    "electron-builder": "^20.43.0",
    "esm": "^3.2.25",
    "expose-loader": "^0.7.5",
    "file-loader": "^4.0.0",
    "flatpickr": "^4.6.1",
    "hyperscript": "^2.0.2",
    "jest": "^24.8.0",
    "jquery": "^3.4.1",
    "jquery-contextmenu": "^2.8.0",
    "moment": "^2.24.0",
    "node-sass": "^4.12.0",
    "parsimmon": "^1.12.0",
    "popper.js": "^1.15.0",
    "raw-loader": "^3.0.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "showdown": "^1.9.0",
    "socket.io-client": "^2.2.0",
    "style-loader": "^0.23.1",
    "sweetalert": "^2.1.2",
    "toastr": "^2.1.4",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.2",
    "ts-node-dev": "^1.0.0-pre.40",
    "turndown": "^5.0.3",
    "typescript": "^3.5.2",
    "vue": "^2.6.10",
    "vue-codemirror": "^4.0.6",
    "vue-property-decorator": "^8.1.1",
    "vue-router": "^3.0.6",
    "wait-on": "^3.2.0",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.7.1"
  },
  "build": {
    "appId": "io.github.patarapolw.rep2recall",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.education",
      "icon": "icon.png"
    },
    "fileAssociations": [
      {
        "ext": "r2r",
        "role": "Editor"
      },
      {
        "ext": "apkg",
        "role": "Editor"
      }
    ],
    "files": [
      "dist/**/*",
      "public/**/*",
      "package.json"
    ]
  },
  "scripts": {
    "start": "yarn run dev",
    "dev": "concurrently 'yarn run js:dev' 'yarn run node:dev'",
    "js:dev": "rimraf public/js && webpack-dev-server --config webpack.dev.js",
    "node:dev": "ts-node-dev -r esm src/node/server.ts",
    "build": "yarn run node:build && yarn run js:build",
    "js:build": "rimraf public/js dist && webpack --config webpack.prod.js",
    "node:build": "rimraf dist && tsc -p src/node",
    "electron:start": "electron .",
    "electron:dev": "rimraf dist && webpack --config webpack.prod.js --mode=development -w",
    "electron:build": "rimraf release && yarn run build && electron-builder",
    "test": "yarn jest",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@types/adm-zip": "^0.4.32",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/express-fileupload": "^1.1.0",
    "@types/socket.io": "^2.1.2",
    "@types/spark-md5": "^3.0.1",
    "@types/uuid": "^3.4.4",
    "adm-zip": "^0.4.13",
    "appdirs": "^1.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-fileupload": "^1.1.5",
    "socket.io": "^2.2.0",
    "spark-md5": "^3.0.0",
    "sqlite": "^3.0.3",
    "sqlite3": "^4.0.9",
    "uuid": "^3.3.2"
  }
}
