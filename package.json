{
  "name": "rep2recall-py",
  "version": "0.3.0",
  "main": "dist/electron.min.js",
  "author": "Pacharapol Withayasakpunt",
  "license": "MIT",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.9.0",
    "@types/hyperscript": "^0.0.3",
    "@types/jquery": "^3.3.29",
    "@types/showdown": "^1.9.3",
    "@types/socket.io-client": "^1.4.32",
    "@types/turndown": "^5.0.0",
    "bootstrap": "^4.3.1",
    "bootstrap-vue": "^2.0.0-rc.22",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.1",
    "electron": "^5.0.2",
    "electron-builder": "^20.43.0",
    "expose-loader": "^0.7.5",
    "file-loader": "^4.0.0",
    "flatpickr": "^4.6.1",
    "hyperscript": "^2.0.2",
    "jquery": "^3.4.1",
    "jquery-contextmenu": "^2.8.0",
    "node-sass": "^4.12.0",
    "popper.js": "^1.15.0",
    "raw-loader": "^3.0.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "showdown": "^1.9.0",
    "socket.io-client": "^2.2.0",
    "style-loader": "^0.23.1",
    "sweetalert": "^2.1.2",
    "ts-loader": "^6.0.2",
    "turndown": "^5.0.3",
    "typescript": "^3.5.1",
    "vue": "^2.6.10",
    "vue-property-decorator": "^8.1.1",
    "vue-router": "^3.0.6",
    "vue-simplemde": "^0.5.2",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.6.0"
  },
  "build": {
    "appId": "io.github.patarapolw.rep2recall",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.education",
      "icon": "icon.png"
    },
    "fileAssociations": [
      {
        "ext": "r2r",
        "role": "Editor"
      }
    ],
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "dist/pyserver"
    ]
  },
  "scripts": {
    "start": "yarn run dev",
    "dev": "concurrently 'yarn run js:dev' 'yarn run py:dev'",
    "js:dev": "webpack-dev-server --config webpack.dev.js",
    "py:dev": "poetry run python pyserver.py",
    "build": "yarn run js:build && yarn run py:build && rimraf dist/pyserver.app",
    "js:build": "rimraf dist && webpack --config webpack.prod.js",
    "py:build": "poetry run pyinstaller -wF pyserver.py --hidden-import=gevent",
    "electron:start": "electron .",
    "electron:build": "rimraf release && yarn run build && electron-builder"
  }
}
